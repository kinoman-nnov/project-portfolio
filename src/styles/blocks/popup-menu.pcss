.popup-menu {
  display: none;

  @include tablets {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    height: 100vh;
    text-align: center;
    padding: rem(15px);
    background: #313131;
    position: fixed;
    top: 0;
    left: -100%;
    z-index: 100;
    opacity: 0;
    transition: 0.3s;

    
  }
}
