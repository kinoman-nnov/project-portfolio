.uploader {
  min-height: 276px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background: #dee4ed;
  border: 1px dashed #a1a1a1;
  padding: 0 23%;
  text-align: center;
  position: relative;
  background-size: cover;

  &.round {
    max-width: 300px;
    max-height: 300px;
    border-radius: 50%;
    overflow: hidden;
  }
  
  &.active {
    .uploader-title {
      background: rgba(#fff, .9);
    }
  }

  &.hovered {
    border-color: blue;
  }

  &.error {
    border-color: $errors-color;
  
    .uploader__error-tooltip {
      display: block;
    }
  }
}

.uploader-title {
  color: $text-color;
  opacity: .5;
  margin-bottom: 30px;
}

.uploader__error-tooltip {
  display: none;
  position: absolute;
  top: 100%;
  left: 30%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  z-index: 100;
}