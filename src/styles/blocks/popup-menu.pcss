.popup__container {  
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;

  background: url('~images/bg/budda.jpg') right 28% top 28% no-repeat;
  background-size: 400%;

  @include tablets {
    display: flex;
  }
}

.popup__menu {
  display: flex;
  height: 38%;

  &-sidebar {
    @include tablets {
      display: flex;
      flex-direction: column;
      justify-content: center;
      width: 44%;
      height: 100vh;
      padding: 0px 60px;
      background: #fff;
      position: fixed;
      transition: 0.3s;
      animation: move 0.7s forwards;
    }
    
    @include phones {
      width: 100%;
    }  
  }
}

.popup__socials {
  display: flex;
  justify-content: space-between;
}

@include tablets {
  @keyframes move {
    from {
      top: 0;
      left: 120%;
      opacity: 0;
    },
    to {
      top: 0;
      left: 57%;
      opacity: 1;
    }
  }
}

@include phones {
  @keyframes move {
    from {
      top: 0;
      left: 120%;
      opacity: 0;
    },
    to {
      top: 0;
      left: 0%;
      opacity: 1;
    }
  }
}