@import "../../../styles/mixins.pcss";

.uploader-wrapper {
  position: relative;
}

.uploader-wrapper--round {
  .uploader__error-tooltip {
    left: 50%;
  }
}

.uploader {
  min-height: 276px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background: #dee4ed;
  border: 1px dashed #a1a1a1;
  padding: 0 23%;
  text-align: center;
  position: relative;
  background-size: cover;

  &--rect {
    @include tablets {
      width: 100%;
    }
  }

  &.round {
    height: 100%;
    width: 100%;
    min-height: 0;
    border-radius: 50%;
    overflow: hidden;
  }
  
  &.active {
    .uploader-title {
      background: rgba(#fff, .9);
    }

    .user-btn {
      opacity: 0.2;
    }
  }

  &.hovered {
    border-color: blue;
  }
}

.uploader-container {
  display: flex;
  align-items: center;
  flex-direction: column;

  &--round-field {
    width: 200px;
    height: 200px;
  }
}

.uploader-content {
  margin-top: 5px;
}

.uploader-title {
  color: $text-color;
  opacity: .5;
  margin-bottom: 30px;
}

.uploader-btn {
  
  &--internal {
    @include tablets {
      display: none;
    }
  }

  &--external {
    display: none;
    
    @include tablets {
      display: block;
    }
  }
}

.uploader__error-tooltip {
  display: none;
  position: absolute;
  top: 100%;
  left: 30%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  z-index: 100;
}

.error {
  border-color: $errors-color;

  .uploader__error-tooltip {
    display: block;
  }
}