.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header__logo {
  margin-right: 350px;
}

.header-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.hamburger {
  display: none;
  @include tablets {
    display: block;
  }
}

.header__menu {
  width: 55%;

  @include tablets {
    display: none;
  }
}

.header__buttons {
