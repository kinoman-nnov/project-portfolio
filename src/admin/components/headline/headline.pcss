@import "../../../styles/mixins.pcss";

.headline-component {
  background-image: linear-gradient(to top, #3e3e59, #454573);
  color: #ffffff80;
}

.headline-container {
  display: flex;
  padding: 16px 0;
  align-items: center;
}

.buttons {
  margin-left: auto;

  @include phones {
    display: none;
  }
}

.btn {
  color: #ffffffb3;
  text-decoration: underline;
}

.title {
  margin-left: 30px;

  @include phones {
    display: none;
  }
}
